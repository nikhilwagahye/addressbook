<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="10sp" >

        <ImageView
            android:id="@+id/imageViewForProfilePicture"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:background="@drawable/dummy_avatar"
            android:onClick="onProfilePic"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="firstname" />

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="lastname" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextMobileNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="mobile number"
            android:inputType="number"
            android:maxLength="10" />

        <EditText
            android:id="@+id/editTextSecondaryNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="secondary number"
            android:inputType="number"
            android:maxLength="10" />

        <EditText
            android:id="@+id/editTextEmailId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="email id"
            android:inputType="textWebEmailAddress" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editTextBirthDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:hint="birthdate"
                android:inputType="date" />

            <ImageButton
                android:id="@+id/buttonCalender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:background="@android:drawable/ic_menu_my_calendar"
                android:onClick="showDatePickerDialogFrom" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="top|left"
            android:hint="address"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:minLines="6"
            android:scrollbars="vertical" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login"
                android:text="save" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login"
                android:text="cancel" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>